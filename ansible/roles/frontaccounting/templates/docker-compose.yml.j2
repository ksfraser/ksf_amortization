version: '3.8'

# {{ ansible_managed }}
# Docker Compose configuration for FrontAccounting with KSF Amortizations
# Auto-generated by Ansible - do not edit manually

services:
  # nginx reverse proxy and web server
  nginx:
    image: nginx:latest
    container_name: fa-nginx
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/conf.d:/etc/nginx/conf.d:ro
      - ./data/frontaccounting:/var/www/frontaccounting:ro
      - ./logs/nginx:/var/log/nginx
    depends_on:
      - app
    networks:
      - fa-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  # PHP-FPM application server
  app:
    image: php:{{ fa_php_version | default('7.4') }}-fpm
    container_name: fa-app
    environment:
      - DB_HOST=db
      - DB_NAME=${FA_DB_NAME:-frontaccounting}
      - DB_USER=${FA_DB_USER:-frontaccounting}
      - DB_PASSWORD=${FA_DB_PASSWORD}
      - FRONTACCOUNTING_VERSION={{ fa_version }}
    volumes:
      - ./data/frontaccounting:/var/www/frontaccounting
      - ./php/php.ini:/usr/local/etc/php/php.ini:ro
      - ./php/conf.d:/usr/local/etc/php/conf.d:ro
      - ./logs/app:/var/log/php-fpm
    depends_on:
      - db
    networks:
      - fa-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "php-fpm-healthcheck"]
      interval: 30s
      timeout: 10s
      retries: 3

  # MySQL database
  db:
    image: mysql:{{ fa_mysql_version | default('5.7') }}
    container_name: fa-db
    environment:
      MYSQL_ROOT_PASSWORD: ${FA_DB_ROOT_PASSWORD}
      MYSQL_DATABASE: ${FA_DB_NAME:-frontaccounting}
      MYSQL_USER: ${FA_DB_USER:-frontaccounting}
      MYSQL_PASSWORD: ${FA_DB_PASSWORD}
    volumes:
      - ./database:/var/lib/mysql
      - ./logs/mysql:/var/log/mysql
    networks:
      - fa-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 10s
      timeout: 5s
      retries: 5

  # phpMyAdmin for database management (optional)
  phpmyadmin:
    image: phpmyadmin:latest
    container_name: fa-phpmyadmin
    environment:
      PMA_HOST: db
      PMA_USER: root
      PMA_PASSWORD: ${FA_DB_ROOT_PASSWORD}
    ports:
      - "8081:80"
    depends_on:
      - db
    networks:
      - fa-network
    restart: unless-stopped
    profiles:
      - optional

networks:
  fa-network:
    driver: bridge

volumes:
  db_data:
    driver: local
