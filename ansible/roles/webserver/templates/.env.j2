# {{ ansible_managed }}
# Application environment configuration
# Auto-generated by Ansible - do not edit manually

APP_NAME="KSF Amortizations"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://{{ ansible_host }}

# Server configuration
SERVER_NAME={{ ansible_host }}
SERVER_ADMIN=admin@{{ ansible_host }}

# PHP Configuration
PHP_VERSION={{ php_version }}

# Database (if using MySQL)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=ksf_amortizations
DB_USERNAME=amortization_user
DB_PASSWORD=change_me_in_production

# File upload limits
UPLOAD_MAX_FILESIZE=32M
POST_MAX_SIZE=32M

# Application paths
APP_ROOT={{ app_root }}
STORAGE_PATH={{ app_root }}/storage
LOGS_PATH={{ app_root }}/storage/logs

# Security
TRUSTED_PROXIES=*
TRUSTED_HEADERS=*

# Cache and Session
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_DRIVER=sync

# API Configuration
API_RATE_LIMIT=1000
API_TIMEOUT=300

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=notice

# Maintenance
MAINTENANCE_MODE=false
