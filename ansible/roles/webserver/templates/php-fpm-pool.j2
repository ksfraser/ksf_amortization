# {{ ansible_managed }}
# PHP-FPM pool configuration for KSF Amortizations
# Auto-generated by Ansible - do not edit manually

[ksf-amortizations]

; Unix socket
listen = /run/php/php{{ php_version }}-fpm-ksf.sock
listen.owner = www-data
listen.group = www-data
listen.mode = 0666

; Process management
pm = dynamic
pm.max_children = 20
pm.start_servers = 10
pm.min_spare_servers = 5
pm.max_spare_servers = 15
pm.process_idle_timeout = 10s

; Logging
access.log = /var/log/php-fpm-ksf-access.log access
slowlog = /var/log/php-fpm-ksf-slow.log
request_slowlog_timeout = 5s

; User and group
user = www-data
group = www-data

; Additional settings
catch_workers_output = yes
decorate_workers_output = yes
security.limit_extensions = .php

; Environment
env[HOSTNAME] = {{ inventory_hostname }}
env[PATH] = /usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
env[TMP] = /tmp
env[TMPDIR] = /tmp
env[TEMP] = /tmp
