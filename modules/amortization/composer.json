{
  "name": "ksfraser/fa-amortization-module",
  "description": "FrontAccounting Amortization Module - uses modular packages from monorepo",
  "type": "project",
  "require": {
    "php": ">=7.3",
    "brick/math": "^0.11",
    "ksfraser/html": "^1.0",
    "ksfraser/amortizations-core": "^1.0",
    "ksfraser/amortizations-frontaccounting": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.2"
  },
  "repositories": [
    {
      "type": "path",
      "url": "../../vendor-src/ksfraser-html"
    },
    {
      "type": "path",
      "url": "../../packages/ksf-amortizations-core"
    },
    {
      "type": "path",
      "url": "../../packages/ksf-amortizations-frontaccounting"
    }
  ],
  "autoload": {
    "psr-4": {
      "Ksfraser\\Amortizations\\": "src/Ksfraser/Amortizations/",
      "Ksfraser\\Caching\\": "src/Ksfraser/Caching/",
      "Ksfraser\\Performance\\": "src/Ksfraser/Performance/",
      "Ksfraser\\Security\\": "src/Ksfraser/Security/",
      "Ksfraser\\Api\\": "src/Ksfraser/Api/",
      "Ksfraser\\Webhooks\\": "src/Ksfraser/Webhooks/",
      "Ksfraser\\Plugins\\": "src/Ksfraser/Plugins/",
      "Ksfraser\\Localization\\": "src/Ksfraser/Localization/"
    }
  },
  "scripts": {
    "test": "phpunit --bootstrap vendor/autoload.php ../../tests/"
  }
}
